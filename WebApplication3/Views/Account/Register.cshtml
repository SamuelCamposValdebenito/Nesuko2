@using WebApplication3.Models
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>NumeroDeSerie | Registro</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    <div class="navbar-wrapper">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Dashboard_1", "Dashboards")">WEBAPPLAYERS</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Index","Home")#contact">Home</a></li>
                        <li><a class="page-scroll" href="#features">Caracteristicas</a></li>
                        <li><a class="page-scroll" href="#team">Equipo</a></li>
                        <li><a class="page-scroll" href="#testimonials">Testimonio</a></li>
                        <li><a class="page-scroll" href="#pricing">Precios</a></li>
                        <li><a class="page-scroll" href="#contact">Contacto</a></li>
                        <li><a href="@Url.Action("login","account")">Entrar</a></li>
                        <li><a href="@Url.Action("register","account")">Registrar</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">NS</h1>

            </div>
            <h3>Registrese en NS</h3>
            <p>Cree una cuenta para vernos en acción.</p>
           @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
           {
                    @Html.AntiForgeryToken()
            <form class="m-t" role="form" action="#">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder= "Nombre", style="text-align:center", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Apellido", style = "text-align:center", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Correo", style = "text-align:center", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", style = "text-align:center", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirme Contraseña", style = "text-align:center", @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="checkbox"><label> <input type="checkbox"><i></i> Acepto los terminos y condiciones </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Registrar</button>
                
                <p class="text-muted text-center"><small>¿Ya tiene una cuenta?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Login", "Account")">Iniciar sesión</a>
            </form>
            }
            <p class="m-t"> <small>www.numerodeserie.cl &copy; 2017-2018</small> </p>
        </div>
    </div>
</body>

</html>
